{
	"scripts": {
		"dev": "nodemon --watch src -r tsconfig-paths/register src/app/index.ts",
		"dev:query-handler": "nodemon --watch src/query.handler -r tsconfig-paths/register src/query.handler/index.ts",
		"dev:command-handler": "nodemon --watch src/command.handler -r tsconfig-paths/register src/command.handler/index.ts",
		"start": "node app.js",
		"build": "tsc -p tsconfig.json",
		"db:migrate": "ts-node --files ./src/db/migrate.ts",
		"db:generate": "drizzle-kit generate:mysql"
	},
	"dependencies": {
		"amqplib": "^0.10.3",
		"drizzle-orm": "^0.29.2",
		"fastify": "^4.25.2",
		"mongodb": "6.3",
		"mysql2": "^3.6.5"
	},
	"devDependencies": {
		"@tsconfig/node21": "^21.0.1",
		"@types/amqplib": "^0.10.4",
		"@types/node": "^20.10.6",
		"drizzle-kit": "^0.20.9",
		"nodemon": "^3.0.2",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.3.3"
	}
}
